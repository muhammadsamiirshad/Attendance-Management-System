@model SectionDetailsViewModel

@{
    ViewData["Title"] = "Section Details - " + Model.Section.SectionName;
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <h1><i class="bi bi-diagram-3"></i> Section Details</h1>
            <a asp-action="ViewAllSections" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to All Sections
            </a>
        </div>
        <hr />
    </div>
</div>

<div class="row">
    <div class="col-lg-4">
        <!-- Section Information Card -->
        <div class="card shadow mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="bi bi-info-circle"></i> Section Information</h5>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-5">Section Name:</dt>
                    <dd class="col-sm-7"><strong>@Model.Section.SectionName</strong></dd>

                    <dt class="col-sm-5">Description:</dt>
                    <dd class="col-sm-7">@Model.Section.Description</dd>

                    <dt class="col-sm-5">Capacity:</dt>
                    <dd class="col-sm-7">@Model.Capacity students</dd>

                    <dt class="col-sm-5">Enrolled:</dt>
                    <dd class="col-sm-7">
                        <span class="badge bg-info">@Model.TotalStudents students</span>
                    </dd>

                    <dt class="col-sm-5">Available Spots:</dt>
                    <dd class="col-sm-7">
                        @if (Model.AvailableSpots > 0)
                        {
                            <span class="badge bg-success">@Model.AvailableSpots spots</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Full</span>
                        }
                    </dd>

                    <dt class="col-sm-5">Status:</dt>
                    <dd class="col-sm-7">
                        @if (Model.Section.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactive</span>
                        }
                    </dd>
                </dl>
            </div>
        </div>

        <!-- Assigned Sessions Card -->
        <div class="card shadow">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0"><i class="bi bi-calendar3"></i> Assigned Sessions</h5>
            </div>
            <div class="card-body">
                @if (Model.AssignedSessions.Any())
                {
                    <ul class="list-group list-group-flush">
                        @foreach (var session in Model.AssignedSessions)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <strong>@session.SessionName</strong>
                                    <br />
                                    <small class="text-muted">@session.StartDate.ToString("MMM dd, yyyy") - @session.EndDate.ToString("MMM dd, yyyy")</small>
                                </div>
                                <div>
                                    @if (session.IsActive)
                                    {
                                        <span class="badge bg-success me-2">Active</span>
                                        <button type="button" class="btn btn-sm btn-danger" 
                                                onclick="unassignSession(@Model.Section.Id, @session.Id, '@session.SessionName')" 
                                                title="Unassign">
                                            <i class="bi bi-x-circle"></i>
                                        </button>
                                    }
                                </div>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p class="text-muted mb-0">
                        <i class="bi bi-info-circle"></i> No sessions assigned yet.
                    </p>
                }
                <div class="mt-3">
                    <a asp-action="AssignSectionsToSessions" asp-route-sectionId="@Model.Section.Id" class="btn btn-sm btn-success w-100">
                        <i class="bi bi-calendar-plus"></i> Assign to Session
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-8">
        <!-- Students Enrolled Card -->
        <div class="card shadow">
            <div class="card-header bg-info text-white">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-people"></i> Enrolled Students (@Model.TotalStudents)</h5>
                    <div>
                        <input type="text" id="searchStudent" class="form-control form-control-sm" placeholder="Search students..." style="width: 200px;" />
                    </div>
                </div>
            </div>
            <div class="card-body p-0">
                @if (Model.Students.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0" id="studentsTable">
                            <thead class="table-light">
                                <tr>
                                    <th>Student #</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Assigned Date</th>
                                    <th>Registered Courses</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var student in Model.Students.OrderBy(s => s.StudentNumber))
                                {
                                    <tr>
                                        <td><strong>@student.StudentNumber</strong></td>
                                        <td>@student.FullName</td>
                                        <td><small>@student.Email</small></td>
                                        <td>@student.AssignedToSectionDate.ToString("MMM dd, yyyy")</td>
                                        <td>
                                            @if (student.RegisteredCourses.Any())
                                            {
                                                <span class="badge bg-primary">@student.RegisteredCourses.Count</span>
                                                <small class="text-muted">courses</small>
                                            }
                                            else
                                            {
                                                <span class="text-muted">None</span>
                                            }
                                        </td>
                                        <td>
                                            <a asp-action="StudentDetails" asp-route-id="@student.StudentId" class="btn btn-sm btn-info" title="View Details">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <button type="button" class="btn btn-sm btn-danger" 
                                                    onclick="unassignStudent(@student.StudentId, @Model.Section.Id, '@student.FullName')" 
                                                    title="Unassign">
                                                <i class="bi bi-x-circle"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="p-4 text-center text-muted">
                        <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                        <p class="mt-2">No students enrolled in this section yet.</p>
                        <a asp-action="AssignStudentsToSection" class="btn btn-primary">
                            <i class="bi bi-plus-circle"></i> Assign Students
                        </a>
                    </div>
                }
            </div>
        </div>

        <!-- Quick Actions Card -->
        <div class="card shadow mt-4">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-lightning"></i> Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-2">
                        <a asp-action="AssignStudentsToSection" class="btn btn-outline-primary w-100">
                            <i class="bi bi-person-plus"></i> Assign Students to Section
                        </a>
                    </div>
                    <div class="col-md-6 mb-2">
                        <a asp-action="AssignSectionsToSessions" asp-route-sectionId="@Model.Section.Id" class="btn btn-outline-success w-100">
                            <i class="bi bi-calendar-plus"></i> Assign to Session
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Search functionality
            $('#searchStudent').on('keyup', function() {
                var value = $(this).val().toLowerCase();
                $('#studentsTable tbody tr').filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });

        function unassignStudent(studentId, sectionId, studentName) {
            if (confirm(`Are you sure you want to unassign "${studentName}" from this section?`)) {
                var form = document.createElement('form');
                form.method = 'POST';
                form.action = '@Url.Action("UnassignStudentFromSection", "Admin")';
                
                var studentInput = document.createElement('input');
                studentInput.type = 'hidden';
                studentInput.name = 'studentId';
                studentInput.value = studentId;
                form.appendChild(studentInput);
                
                var sectionInput = document.createElement('input');
                sectionInput.type = 'hidden';
                sectionInput.name = 'sectionId';
                sectionInput.value = sectionId;
                form.appendChild(sectionInput);
                
                var token = document.createElement('input');
                token.type = 'hidden';
                token.name = '__RequestVerificationToken';
                token.value = $('input[name="__RequestVerificationToken"]').val();
                form.appendChild(token);
                
                document.body.appendChild(form);
                form.submit();
            }
        }

        function unassignSession(sectionId, sessionId, sessionName) {
            if (confirm(`Are you sure you want to unassign this section from "${sessionName}"?`)) {
                var form = document.createElement('form');
                form.method = 'POST';
                form.action = '@Url.Action("UnassignSectionFromSession", "Admin")';
                
                var sectionInput = document.createElement('input');
                sectionInput.type = 'hidden';
                sectionInput.name = 'sectionId';
                sectionInput.value = sectionId;
                form.appendChild(sectionInput);
                
                var sessionInput = document.createElement('input');
                sessionInput.type = 'hidden';
                sessionInput.name = 'sessionId';
                sessionInput.value = sessionId;
                form.appendChild(sessionInput);
                
                var token = document.createElement('input');
                token.type = 'hidden';
                token.name = '__RequestVerificationToken';
                token.value = $('input[name="__RequestVerificationToken"]').val();
                form.appendChild(token);
                
                document.body.appendChild(form);
                form.submit();
            }
        }
    </script>
}
