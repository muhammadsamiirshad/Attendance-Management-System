@model AdminDashboardViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="row">
    <div class="col-12">
        <h1><i class="bi bi-speedometer2"></i> Admin Dashboard</h1>
        <hr />
    </div>
</div>

<div class="row">
    <div class="col-md-3">
        <div class="card bg-primary text-white shadow">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h5>Students</h5>
                        <h2>@Model.TotalStudents</h2>
                    </div>
                    <div>
                        <i class="bi bi-people display-4 opacity-50"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-primary border-primary">
                <a asp-action="ManageStudents" class="text-white text-decoration-none">
                    <small>View Details <i class="bi bi-arrow-right"></i></small>
                </a>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="card bg-success text-white shadow">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h5>Teachers</h5>
                        <h2>@Model.TotalTeachers</h2>
                    </div>
                    <div>
                        <i class="bi bi-person-badge display-4 opacity-50"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-success border-success">
                <a asp-action="ManageTeachers" class="text-white text-decoration-none">
                    <small>View Details <i class="bi bi-arrow-right"></i></small>
                </a>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="card bg-warning text-white shadow">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h5>Courses</h5>
                        <h2>@Model.TotalCourses</h2>
                    </div>
                    <div>
                        <i class="bi bi-book display-4 opacity-50"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-warning border-warning">
                <a asp-controller="Course" asp-action="Index" class="text-white text-decoration-none">
                    <small>View Details <i class="bi bi-arrow-right"></i></small>
                </a>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="card bg-info text-white shadow">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h5>Sections</h5>
                        <h2>@Model.TotalSections</h2>
                    </div>
                    <div>
                        <i class="bi bi-diagram-3 display-4 opacity-50"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-info border-info">
                <a asp-action="AssignStudentsToSection" class="text-white text-decoration-none">
                    <small>Manage Sections <i class="bi bi-arrow-right"></i></small>
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-header bg-light">
                <h5><i class="bi bi-gear"></i> Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="list-group list-group-flush">
                    <a asp-action="AssignStudentsToSection" class="list-group-item list-group-item-action">
                        <i class="bi bi-diagram-3"></i> Assign Students to Section
                    </a>
                    <a asp-action="AssignSectionsToSessions" class="list-group-item list-group-item-action">
                        <i class="bi bi-calendar3"></i> Assign Sections to Sessions
                    </a>
                    <a asp-action="AssignCoursesToStudents" class="list-group-item list-group-item-action">
                        <i class="bi bi-book"></i> Assign Courses to Students
                    </a>
                    <a asp-action="AssignTeachersToCourses" class="list-group-item list-group-item-action">
                        <i class="bi bi-person-workspace"></i> Assign Teachers to Courses
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-header bg-light">
                <h5><i class="bi bi-plus-circle"></i> Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="list-group list-group-flush">
                    <a asp-controller="Timetable" asp-action="Create" class="list-group-item list-group-item-action">
                        <i class="bi bi-calendar-plus"></i> Create Timetable Entry
                    </a>
                    <a asp-controller="Course" asp-action="Create" class="list-group-item list-group-item-action">
                        <i class="bi bi-plus-circle"></i> Create New Course
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
