@model IEnumerable<Timetable>

@{
    ViewData["Title"] = "Manage Timetables";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1><i class="bi bi-calendar-week"></i> Manage Timetables</h1>
                <a asp-action="CreateTimetable" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i> Create New Timetable
                </a>
            </div>
            <p class="text-muted">Manage class schedules for all courses, sections, and teachers</p>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <!-- Summary Cards -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-calendar-week display-4 text-primary"></i>
                        <h3 class="mt-2 mb-0">@Model.Count()</h3>
                        <p class="text-muted mb-0">Total Schedules</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-check-circle display-4 text-success"></i>
                        <h3 class="mt-2 mb-0">@Model.Count(t => t.IsActive)</h3>
                        <p class="text-muted mb-0">Active</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-book display-4 text-info"></i>
                        <h3 class="mt-2 mb-0">@Model.Select(t => t.CourseId).Distinct().Count()</h3>
                        <p class="text-muted mb-0">Courses</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-diagram-3 display-4 text-warning"></i>
                        <h3 class="mt-2 mb-0">@Model.Select(t => t.SectionId).Distinct().Count()</h3>
                        <p class="text-muted mb-0">Sections</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Timetables Table -->
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">All Timetables</h5>
                    <input type="text" id="searchTable" class="form-control form-control-sm" placeholder="Search..." style="width: 250px;" />
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0" id="timetableTable">
                        <thead class="table-light">
                            <tr>
                                <th>Course</th>
                                <th>Section</th>
                                <th>Teacher</th>
                                <th>Day</th>
                                <th>Time</th>
                                <th>Classroom</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var timetable in Model.OrderBy(t => t.Day).ThenBy(t => t.StartTime))
                            {
                                <tr>
                                    <td>
                                        <strong>@timetable.Course?.CourseCode</strong><br />
                                        <small class="text-muted">@timetable.Course?.CourseName</small>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@timetable.Section?.SectionName</span>
                                    </td>
                                    <td>
                                        @timetable.Teacher?.FirstName @timetable.Teacher?.LastName<br />
                                        <small class="text-muted">@timetable.Teacher?.TeacherNumber</small>
                                    </td>
                                    <td><strong>@timetable.Day</strong></td>
                                    <td>
                                        @DateTime.Today.Add(timetable.StartTime).ToString("hh:mm tt")<br />
                                        <small class="text-muted">to @DateTime.Today.Add(timetable.EndTime).ToString("hh:mm tt")</small>
                                    </td>
                                    <td>@timetable.Classroom</td>
                                    <td>
                                        @if (timetable.IsActive)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inactive</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="EditTimetable" asp-route-id="@timetable.Id" class="btn btn-outline-primary" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <button type="button" class="btn btn-outline-danger" onclick="deleteTimetable(@timetable.Id)" title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center py-5">
                <i class="bi bi-calendar-x display-1 text-muted"></i>
                <h3 class="mt-3 text-muted">No Timetables Found</h3>
                <p class="text-muted">Create your first timetable to get started.</p>
                <a asp-action="CreateTimetable" class="btn btn-success mt-3">
                    <i class="bi bi-plus-circle"></i> Create Timetable
                </a>
            </div>
        </div>
    }
</div>

<!-- Delete Confirmation Form -->
<form id="deleteForm" method="post" asp-action="DeleteTimetable" style="display:none;">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" id="deleteId" />
</form>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Search functionality
            $('#searchTable').on('keyup', function() {
                var value = $(this).val().toLowerCase();
                $('#timetableTable tbody tr').filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });

        function deleteTimetable(id) {
            if (confirm('Are you sure you want to delete this timetable entry?')) {
                $('#deleteId').val(id);
                $('#deleteForm').submit();
            }
        }
    </script>
}
