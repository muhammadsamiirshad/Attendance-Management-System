@model AssignTeacherToCourseViewModel
@{
    ViewData["Title"] = "Assign Teachers to Courses";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title mb-0">
                        <i class="bi bi-person-workspace"></i> @ViewData["Title"]
                    </h3>
                </div>
                <div class="card-body">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="row">
                        <div class="col-md-8">
                            <form asp-action="AssignTeachersToCourses" method="post">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="TeacherId" class="form-label">Teacher</label>
                                            <select asp-for="TeacherId" class="form-select" required>
                                                <option value="">Select a teacher...</option>
                                                @if (Model.Teachers != null)
                                                {
                                                    @foreach (var teacher in Model.Teachers)
                                                    {
                                                        <option value="@teacher.Id">@teacher.AppUser?.FullName (@teacher.TeacherNumber)</option>
                                                    }
                                                }
                                            </select>
                                            <span asp-validation-for="TeacherId" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="CourseId" class="form-label">Course</label>
                                            <select asp-for="CourseId" class="form-select" required>
                                                <option value="">Select a course...</option>
                                                @if (Model.Courses != null)
                                                {
                                                    @foreach (var course in Model.Courses)
                                                    {
                                                        <option value="@course.Id">@course.CourseCode - @course.CourseName</option>
                                                    }
                                                }
                                            </select>
                                            <span asp-validation-for="CourseId" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                                <div class="d-flex justify-content-between">
                                    <a asp-action="Index" class="btn btn-secondary">
                                        <i class="bi bi-arrow-left"></i> Back to Dashboard
                                    </a>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="bi bi-check-circle"></i> Assign Teacher to Course
                                    </button>
                                </div>
                            </form>
                        </div>
                        <div class="col-md-4">
                            <div class="card bg-light">
                                <div class="card-header">
                                    <h5><i class="bi bi-info-circle"></i> Information</h5>
                                </div>
                                <div class="card-body">
                                    <p><strong>Teacher-Course Assignment</strong> determines who teaches which courses.</p>
                                    <p>Each teacher can be assigned to multiple courses, and each course can have multiple teachers.</p>
                                    <p>This is essential for creating proper timetables and managing class schedules.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
