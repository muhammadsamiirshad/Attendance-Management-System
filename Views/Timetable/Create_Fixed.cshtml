@model TimetableCreateViewModel
@{
    ViewData["Title"] = "Create Timetable Entry";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title mb-0">@ViewData["Title"]</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="CourseId" class="form-label">Course</label>
                                    <select asp-for="CourseId" class="form-select" required>
                                        <option value="">Select a course...</option>
                                        @if (Model.Courses != null)
                                        {
                                            @foreach (var course in Model.Courses)
                                            {
                                                <option value="@course.Id">@course.CourseCode - @course.CourseName</option>
                                            }
                                        }
                                    </select>
                                    <span asp-validation-for="CourseId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="TeacherId" class="form-label">Teacher</label>
                                    <select asp-for="TeacherId" class="form-select" required>
                                        <option value="">Select a teacher...</option>
                                        @if (Model.Teachers != null)
                                        {
                                            @foreach (var teacher in Model.Teachers)
                                            {
                                                <option value="@teacher.Id">@teacher.AppUser?.FullName (@teacher.TeacherNumber)</option>
                                            }
                                        }
                                    </select>
                                    <span asp-validation-for="TeacherId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="SectionId" class="form-label">Class Section</label>
                                    <select asp-for="SectionId" class="form-select" required>
                                        <option value="">Select a class section...</option>
                                        @if (Model.Sections != null)
                                        {
                                            @foreach (var sect in Model.Sections)
                                            {
                                                <option value="@sect.Id">@sect.SectionName</option>
                                            }
                                        }
                                    </select>
                                    <span asp-validation-for="SectionId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Day" class="form-label">Day</label>
                                    <select asp-for="Day" class="form-select" required>
                                        <option value="">Select a day...</option>
                                        <option value="Monday">Monday</option>
                                        <option value="Tuesday">Tuesday</option>
                                        <option value="Wednesday">Wednesday</option>
                                        <option value="Thursday">Thursday</option>
                                        <option value="Friday">Friday</option>
                                        <option value="Saturday">Saturday</option>
                                        <option value="Sunday">Sunday</option>
                                    </select>
                                    <span asp-validation-for="Day" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="StartTime" class="form-label">Start Time</label>
                                    <input asp-for="StartTime" type="time" class="form-control" required />
                                    <span asp-validation-for="StartTime" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="EndTime" class="form-label">End Time</label>
                                    <input asp-for="EndTime" type="time" class="form-control" required />
                                    <span asp-validation-for="EndTime" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="Classroom" class="form-label">Classroom</label>
                                    <input asp-for="Classroom" type="text" class="form-control" placeholder="e.g., Room 101" required />
                                    <span asp-validation-for="Classroom" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Index", "Timetable")" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to Timetable
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Create Timetable Entry
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
