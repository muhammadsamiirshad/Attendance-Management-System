@model CourseDetailsViewModel

@{
    ViewData["Title"] = $"{Model.Course?.CourseName} - Students";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-action="MyCourses">My Courses</a></li>
                    <li class="breadcrumb-item active">@Model.Course?.CourseName</li>
                </ol>
            </nav>
            <h1><i class="bi bi-book"></i> @Model.Course?.CourseName</h1>
            <p class="text-muted">@Model.Course?.CourseCode | @Model.Course?.Department</p>
        </div>
    </div>

    <!-- Course Info Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-people display-4 text-primary"></i>
                    <h3 class="mt-2 mb-0">@Model.TotalStudents</h3>
                    <p class="text-muted mb-0">Enrolled Students</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-star display-4 text-warning"></i>
                    <h3 class="mt-2 mb-0">@Model.Course?.CreditHours</h3>
                    <p class="text-muted mb-0">Credit Hours</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-calendar-week display-4 text-success"></i>
                    <h3 class="mt-2 mb-0">@Model.ClassSchedule.Count</h3>
                    <p class="text-muted mb-0">Classes/Week</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-person-badge display-4 text-info"></i>
                    <h6 class="mt-2 mb-0">@Model.AssignedTeacher?.FirstName @Model.AssignedTeacher?.LastName</h6>
                    <p class="text-muted mb-0">Instructor</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Enrolled Students Table -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-white">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="bi bi-people"></i> Enrolled Students</h5>
                <div>
                    <a asp-controller="Attendance" asp-action="Mark" class="btn btn-success btn-sm">
                        <i class="bi bi-check-square"></i> Mark Attendance
                    </a>
                    <button class="btn btn-primary btn-sm" onclick="window.print()">
                        <i class="bi bi-printer"></i> Print List
                    </button>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            @if (Model.EnrolledStudents != null && Model.EnrolledStudents.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Student Number</th>
                                <th>Full Name</th>
                                <th>Email</th>
                                <th>Section</th>
                                <th>Registered Date</th>
                                <th>Attendance</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var student in Model.EnrolledStudents.OrderBy(s => s.StudentNumber))
                            {
                                <tr>
                                    <td><strong>@student.StudentNumber</strong></td>
                                    <td>@student.FullName</td>
                                    <td><small>@student.Email</small></td>
                                    <td><span class="badge bg-info">@student.Section</span></td>
                                    <td><small>@student.RegisteredDate.ToString("MMM dd, yyyy")</small></td>
                                    <td>
                                        @if (student.TotalClasses > 0)
                                        {
                                            <span>@student.AttendanceCount / @student.TotalClasses</span>
                                            <small class="text-muted">(@student.AttendancePercentage.ToString("F1")%)</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">No classes yet</span>
                                        }
                                    </td>
                                    <td>
                                        @if (student.TotalClasses == 0)
                                        {
                                            <span class="badge bg-secondary">New</span>
                                        }
                                        else if (student.AttendancePercentage >= 75)
                                        {
                                            <span class="badge bg-success">Good</span>
                                        }
                                        else if (student.AttendancePercentage >= 50)
                                        {
                                            <span class="badge bg-warning">Warning</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Poor</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox display-1 text-muted"></i>
                    <h5 class="mt-3 text-muted">No Students Enrolled</h5>
                    <p class="text-muted">No students have registered for this course yet.</p>
                </div>
            }
        </div>
    </div>

    <!-- Class Schedule -->
    @if (Model.ClassSchedule != null && Model.ClassSchedule.Any())
    {
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white">
                <h5 class="mb-0"><i class="bi bi-calendar-week"></i> Class Schedule</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-sm">
                        <thead class="table-light">
                            <tr>
                                <th>Day</th>
                                <th>Time</th>
                                <th>Classroom</th>
                                <th>Duration</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var schedule in Model.ClassSchedule.OrderBy(s => s.Day).ThenBy(s => s.StartTime))
                            {
                                <tr>
                                    <td><strong>@schedule.Day</strong></td>
                                    <td>
                                        @DateTime.Today.Add(schedule.StartTime).ToString("hh:mm tt") - 
                                        @DateTime.Today.Add(schedule.EndTime).ToString("hh:mm tt")
                                    </td>
                                    <td>@schedule.Classroom</td>
                                    <td>@((schedule.EndTime - schedule.StartTime).TotalHours.ToString("F1")) hours</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

<style>
    @@media print {
        .btn, nav, .card-header .d-flex > div {
            display: none !important;
        }
    }
</style>
