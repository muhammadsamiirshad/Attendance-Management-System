@model YearlyReportViewModel
@{
    ViewData["Title"] = "Yearly Report";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title mb-0">
                        <i class="bi bi-calendar"></i> @ViewData["Title"]
                    </h3>
                </div>
                <div class="card-body">
                    <!-- Filter Section -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5><i class="bi bi-funnel"></i> Filters</h5>
                        </div>
                        <div class="card-body">
                            <form asp-action="GenerateYearlyReport" method="post">
                                <div class="row">
                                    <div class="col-md-3">
                                        <label for="SelectedYear" class="form-label">Year</label>
                                        <select name="SelectedYear" id="SelectedYear" class="form-select" asp-for="SelectedYear">
                                            @for (int year = DateTime.Now.Year; year >= DateTime.Now.Year - 5; year--)
                                            {
                                                <option value="@year">@year</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="CourseId" class="form-label">Course (Optional)</label>
                                        <select name="CourseId" id="CourseId" class="form-select" asp-for="CourseId">
                                            <option value="">All Courses</option>
                                            @if (Model?.Courses != null)
                                            {
                                                foreach (var course in Model.Courses)
                                                {
                                                    <option value="@course.Id">@course.CourseCode - @course.CourseName</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                    <div class="col-md-3">
                                        <label class="form-label">&nbsp;</label>
                                        <button type="submit" class="btn btn-primary w-100">
                                            <i class="bi bi-search"></i> Generate Report
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>

                    @if (Model?.AttendanceData != null && Model.AttendanceData.Any())
                    {
                        <!-- Summary Statistics -->
                        <div class="row mb-4">
                            <div class="col-md-3">
                                <div class="card bg-success text-white">
                                    <div class="card-body">
                                        <h5>Total Present</h5>
                                        <h3>@Model.TotalPresent</h3>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-danger text-white">
                                    <div class="card-body">
                                        <h5>Total Absent</h5>
                                        <h3>@Model.TotalAbsent</h3>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-info text-white">
                                    <div class="card-body">
                                        <h5>Attendance Rate</h5>
                                        <h3>@Model.AttendancePercentage.ToString("F1")%</h3>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-warning text-white">
                                    <div class="card-body">
                                        <h5>Total Classes</h5>
                                        <h3>@Model.TotalClasses</h3>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Detailed Attendance Table -->
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Date</th>
                                        <th>Student</th>
                                        <th>Course</th>
                                        <th>Status</th>
                                        <th>Remarks</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var record in Model.AttendanceData.OrderByDescending(a => a.Date))
                                    {
                                        <tr>
                                            <td>@record.Date.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                @(record.Student?.FirstName ?? "N/A") @(record.Student?.LastName ?? "")
                                                <br />
                                                <small class="text-muted">@(record.Student?.StudentNumber ?? "N/A")</small>
                                            </td>
                                            <td>
                                                @(record.Course?.CourseCode ?? "N/A") - @(record.Course?.CourseName ?? "N/A")
                                            </td>
                                            <td>
                                                @if (record.Status == AttendanceStatus.Present)
                                                {
                                                    <span class="badge bg-success">✓ Present</span>
                                                }
                                                else if (record.Status == AttendanceStatus.Absent)
                                                {
                                                    <span class="badge bg-danger">✗ Absent</span>
                                                }
                                                else if (record.Status == AttendanceStatus.Late)
                                                {
                                                    <span class="badge bg-warning">⚠ Late</span>
                                                }
                                                else if (record.Status == AttendanceStatus.Excused)
                                                {
                                                    <span class="badge bg-info">ℹ Excused</span>
                                                }
                                            </td>
                                            <td>@(record.Remarks ?? "-")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info text-center">
                            <h5><i class="bi bi-info-circle"></i> No Data Available</h5>
                            <p>Select year and click "Generate Report" to view attendance reports.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
