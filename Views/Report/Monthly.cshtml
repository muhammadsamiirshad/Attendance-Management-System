@model MonthlyReportViewModel
@{
    ViewData["Title"] = "Monthly Report";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title mb-0">
                        <i class="bi bi-calendar-month"></i> @ViewData["Title"]
                    </h3>
                </div>
                <div class="card-body">
                    <!-- Filter Section -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5><i class="bi bi-funnel"></i> Filters</h5>
                        </div>
                        <div class="card-body">
                            <form asp-action="GenerateMonthlyReport" method="post">
                                <div class="row">
                                    <div class="col-md-3">
                                        <label for="SelectedMonth" class="form-label">Month</label>
                                        <select name="SelectedMonth" id="SelectedMonth" class="form-select" asp-for="SelectedMonth">
                                            <option value="1">January</option>
                                            <option value="2">February</option>
                                            <option value="3">March</option>
                                            <option value="4">April</option>
                                            <option value="5">May</option>
                                            <option value="6">June</option>
                                            <option value="7">July</option>
                                            <option value="8">August</option>
                                            <option value="9">September</option>
                                            <option value="10">October</option>
                                            <option value="11">November</option>
                                            <option value="12">December</option>
                                        </select>
                                    </div>
                                    <div class="col-md-3">
                                        <label for="SelectedYear" class="form-label">Year</label>
                                        <select name="SelectedYear" id="SelectedYear" class="form-select" asp-for="SelectedYear">
                                            @for (int i = DateTime.Now.Year; i >= DateTime.Now.Year - 5; i--)
                                            {
                                                <option value="@i">@i</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="col-md-4">
                                        <label for="CourseId" class="form-label">Course (Optional)</label>
                                        <select name="CourseId" id="CourseId" class="form-select" asp-for="CourseId">
                                            <option value="">All Courses</option>
                                            @if (Model?.Courses != null)
                                            {
                                                @foreach (var course in Model.Courses)
                                                {
                                                    <option value="@course.Id">
                                                        @course.CourseCode - @course.CourseName
                                                    </option>
                                                }
                                            }
                                        </select>
                                    </div>
                                    <div class="col-md-2">
                                        <label class="form-label">&nbsp;</label>
                                        <button type="submit" class="btn btn-primary w-100">
                                            <i class="bi bi-search"></i> Generate Report
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>

                    @if (Model?.AttendanceData != null && Model.AttendanceData.Any())
                    {
                        <!-- Summary Statistics -->
                        <div class="row mb-4">
                            <div class="col-md-3">
                                <div class="card bg-success text-white">
                                    <div class="card-body">
                                        <h5>Total Present</h5>
                                        <h3>@Model.TotalPresent</h3>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-danger text-white">
                                    <div class="card-body">
                                        <h5>Total Absent</h5>
                                        <h3>@Model.TotalAbsent</h3>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-info text-white">
                                    <div class="card-body">
                                        <h5>Attendance Rate</h5>
                                        <h3>@Model.AttendancePercentage.ToString("F1")%</h3>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-warning text-white">
                                    <div class="card-body">
                                        <h5>Total Classes</h5>
                                        <h3>@Model.TotalClasses</h3>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Detailed Attendance Table -->
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Date</th>
                                        <th>Student</th>
                                        <th>Course</th>
                                        <th>Status</th>
                                        <th>Remarks</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var record in Model.AttendanceData.OrderByDescending(a => a.Date))
                                    {
                                        <tr>
                                            <td>@record.Date.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                <strong>@record.Student?.AppUser?.FullName</strong><br>
                                                <small class="text-muted">@record.Student?.StudentNumber</small>
                                            </td>
                                            <td>
                                                <strong>@record.Course?.CourseName</strong><br>
                                                <small class="text-muted">@record.Course?.CourseCode</small>
                                            </td>
                                            <td>
                                                @switch (record.Status)
                                                {
                                                    case AttendanceStatus.Present:
                                                        <span class="badge bg-success">Present</span>
                                                        break;
                                                    case AttendanceStatus.Absent:
                                                        <span class="badge bg-danger">Absent</span>
                                                        break;
                                                    case AttendanceStatus.Late:
                                                        <span class="badge bg-warning">Late</span>
                                                        break;
                                                    case AttendanceStatus.Excused:
                                                        <span class="badge bg-info">Excused</span>
                                                        break;
                                                    default:
                                                        <span class="badge bg-secondary">Unknown</span>
                                                        break;
                                                }
                                            </td>
                                            <td>@record.Remarks</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info text-center">
                            <h5><i class="bi bi-info-circle"></i> No Data Available</h5>
                            <p>Select filters and click "Generate" to view monthly attendance reports.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
