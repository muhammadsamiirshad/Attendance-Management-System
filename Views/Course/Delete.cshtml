@model Course

@{
    ViewData["Title"] = "Delete Course";
}

<div class="row">
    <div class="col-12">
        <h1 class="text-danger"><i class="bi bi-exclamation-triangle"></i> Delete Course</h1>
        <hr />
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow border-danger">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Confirm Deletion</h5>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-circle"></i>
                    <strong>Warning!</strong> Are you sure you want to delete this course? This action cannot be undone.
                </div>

                <h5 class="mb-3">Course Details:</h5>
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="text-muted small">Course Code</label>
                        <p class="fw-bold">@Model.CourseCode</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="text-muted small">Course Name</label>
                        <p class="fw-bold">@Model.CourseName</p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="text-muted small">Credit Hours</label>
                        <p>@Model.CreditHours</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="text-muted small">Department</label>
                        <p>@(!string.IsNullOrEmpty(Model.Department) ? Model.Department : "N/A")</p>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="text-muted small">Description</label>
                    <p>@(!string.IsNullOrEmpty(Model.Description) ? Model.Description : "No description")</p>
                </div>

                <div class="mb-3">
                    <label class="text-muted small">Status</label>
                    <p>
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactive</span>
                        }
                    </p>
                </div>

                @if (Model.StudentRegistrations != null && Model.StudentRegistrations.Any(r => r.IsActive))
                {
                    <div class="alert alert-danger">
                        <i class="bi bi-exclamation-triangle-fill"></i>
                        <strong>Warning!</strong> This course has @Model.StudentRegistrations.Count(r => r.IsActive) enrolled student(s). Deleting it will affect these registrations.
                    </div>
                }

                <form method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Delete Course
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
