@model Course

@{
    ViewData["Title"] = "Course Details";
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <h1><i class="bi bi-book"></i> Course Details</h1>
            <div>
                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                }
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
        <hr />
    </div>
</div>

<div class="row">
    <div class="col-lg-6">
        <div class="card shadow mb-4">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-info-circle"></i> Course Information</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label class="text-muted small">Course Code</label>
                    <p class="fw-bold fs-5">@Model.CourseCode</p>
                </div>
                <div class="mb-3">
                    <label class="text-muted small">Course Name</label>
                    <p class="fw-bold">@Model.CourseName</p>
                </div>
                <div class="mb-3">
                    <label class="text-muted small">Description</label>
                    <p>@(!string.IsNullOrEmpty(Model.Description) ? Model.Description : "No description available")</p>
                </div>
                <div class="mb-3">
                    <label class="text-muted small">Credit Hours</label>
                    <p class="fw-bold">@Model.CreditHours</p>
                </div>
                <div class="mb-3">
                    <label class="text-muted small">Department</label>
                    <p>@(!string.IsNullOrEmpty(Model.Department) ? Model.Department : "N/A")</p>
                </div>
                <div class="mb-3">
                    <label class="text-muted small">Status</label>
                    <p>
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success fs-6">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary fs-6">Inactive</span>
                        }
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-6">
        <div class="card shadow mb-4">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-people"></i> Enrolled Students</h5>
            </div>
            <div class="card-body">
                @if (Model.StudentRegistrations != null && Model.StudentRegistrations.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover table-sm">
                            <thead>
                                <tr>
                                    <th>Student Number</th>
                                    <th>Student Name</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var registration in Model.StudentRegistrations.Where(r => r.IsActive))
                                {
                                    <tr>
                                        <td>@registration.Student.StudentNumber</td>
                                        <td>@registration.Student.FirstName @registration.Student.LastName</td>
                                        <td><span class="badge bg-success">Active</span></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <p class="text-muted small mt-2">
                        Total Enrolled: @Model.StudentRegistrations.Count(r => r.IsActive)
                    </p>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> No students enrolled in this course yet.
                    </div>
                }
            </div>
        </div>

        <div class="card shadow mb-4">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-person-badge"></i> Assigned Teachers</h5>
            </div>
            <div class="card-body">
                @if (Model.CourseAssignments != null && Model.CourseAssignments.Any())
                {
                    <div class="list-group">
                        @foreach (var assignment in Model.CourseAssignments.Where(a => a.IsActive))
                        {
                            <div class="list-group-item">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="mb-1">@assignment.Teacher.FirstName @assignment.Teacher.LastName</h6>
                                        <small class="text-muted">@assignment.Teacher.TeacherNumber</small>
                                    </div>
                                    <span class="badge bg-success">Active</span>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> No teachers assigned to this course yet.
                    </div>
                }
            </div>
        </div>
    </div>
</div>
